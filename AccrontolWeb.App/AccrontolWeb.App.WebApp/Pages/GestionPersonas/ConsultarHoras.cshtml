@page
@model AccrontolWeb.App.WebApp.ConsultarHorasModel
@{
    ViewData["Title"] = "Consultar Empleados";
    Layout = "_Layout"; //Generar una plantilla con estilos
}
<div class="container">
    <div class="row">
        <div class="col-md-2 col-ms-12">

        </div>
        <div class="col-md-8 col-ms-12">
            <h1>Editar por documento</h1>
            <form method="post">
                <div class="form-group">
                    <label for="descripcion">Numero documento: </label>
                    <input type="text" class="form-control" id="identificacion" name="identificacion"
                        placeholder="Ingrese identificación" minlength="2" maxlength="50">
                </div>
                <div class="form-group">
                    <label for="SelectorArea">Seleccione area empleado: </label>
                    <select class="form-control" id="Areaid" name="Areaid">
                        <option value="" selected="selected">Seleccione </option>
                        <option value="1">Adminstracion</option>
                        <option value="2">Desarrollo</option>
                        <option value="3">SoporteIT</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Consultar</button>
            </form>
        </div>
        <div class="row">
            <div class="col-md-2 col-ms-12">

            </div>
            <div class="col-md-8 col-ms-12">
                <form method="post">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">item</th>
                                    <th scope="col">Identificación</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Usuario</th>
                                    <th scope="col">área</th>
                                    <th scope="col">Sede</th>
                                    <th scope="col">Estado</th>
                                    <th scope="col">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--
                                    cosulta individual, llamar lista del back ONpost 
                                    asp-page=".\Nombrepagina_Enrutar"
                                    asp-route-id="item.id" enviar el id (validar logica back)
                                -->
                                @foreach (var item in Model.listadoEmpleado)
                                {
                                    <tr>
                                        <td scope="row">@item.id</td>
                                        <td>@item.identificacion</td>
                                        <td>@item.nombre</td>
                                        <td>@item.usuario</td>
                                        <td>@item.Areaid</td>
                                        <td>@item.Sedeid</td>
                                        <td>@item.active</td>
                                        <td>    
                                            <a asp-page=".\EditarEmpleado" asp-route-id="@item.id"><i class="far fa-edit"></i></a>
                                            <a asp-page=".\_Layout" asp-route-id="@item.id"><i
                                                class="far fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 col-ms-12">


        </div>
        <div class="col-md-8 col-ms-12">
            <h1>Consulta por grupo</h1>
                            <form method="post">
                    <div class="table-responsive">
                        <table class="table table-striped table-sm">
                            <thead>
                                <tr>
                                    <th scope="col">item</th>
                                    <th scope="col">Identificación</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Usuario</th>
                                    <th scope="col">área</th>
                                    <th scope="col">Sede</th>
                                    <th scope="col">Estado</th>
                                    <th scope="col">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--
                                    cosulta individual, llamar lista del back ONpost 
                                    asp-page=".\Nombrepagina_Enrutar"
                                    asp-route-id="item.id" enviar el id (validar logica back)
                                -->
                                @foreach (var item in Model.listado_Empleados)
                                {
                                    <tr>
                                        <td scope="row">@item.id</td>
                                        <td>@item.identificacion</td>
                                        <td>@item.nombre</td>
                                        <td>@item.usuario</td>
                                        <td>@item.Areaid</td>
                                        <td>@item.Sedeid</td>
                                        <td>@item.active</td>
                                        <td>
                                            <a asp-page=".\EditarEmpleado" asp-route-id="@item.id"><i class="far fa-edit"></i></a>
                                            <a asp-page=".\_Layout" asp-route-id="@item.id"><i
                                                class="far fa-trash-alt"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </form>

        </div>
        <div class="col-md-2 col-ms-12">

        </div>


    </div>
</div>
